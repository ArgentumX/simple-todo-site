@*
  Defining the layout and metadata for the About page
*@
@{
    ViewData["Title"] = "About Us";
}

@*
*@
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 mb-4">About Us</h1>
            <p class="lead text-muted mb-4">
                Welcome to our company! We are passionate about delivering innovative solutions
                and creating value for our customers. Our team is dedicated to excellence,
                creativity, and continuous improvement.
            </p>
            <p class="mb-4">
                Founded in 2025, our mission is to empower businesses and individuals through
                cutting-edge technology and exceptional service. Whether you're here to explore
                our services or join our journey, we're excited to have you!
            </p>
            <a href="/" class="btn btn-primary btn-lg">Back to Home</a>
        </div>
    </div>
</section>

@*
*@
<style>
    body {
        background-color: #f8f9fa;
    }

    section {
        padding: 60px 0;
    }

    .display-4 {
        font-weight: 700;
        color: #343a40;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 30px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>