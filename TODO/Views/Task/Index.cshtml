@using TODO.Models.Task
@using TODO.Models.User
@model List<TODO.Models.Task.view.TaskViewModel>
@{
    ViewData["Title"] = "Task List";
}
<h2>Task List</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>
@if (Model == null || Model.Count == 0)
{
    <p>No tasks found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Name</td>
                    <td>@(task.Description ?? "No description")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm">Delete</a>
                        @if (!task.IsCompleted)
                        {
                            <form asp-action="Complete" asp-route-id="@task.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-sm">Complete</button>
                            </form>
                        }
                        else
                        {
                            <span class="btn btn-success btn-sm disabled">Completed</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}