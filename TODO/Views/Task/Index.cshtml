@model List<TODO.Models.TodoTask>
@{
    ViewData["Title"] = "Task List";
}
<h2>Task List</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>
@if (Model == null || Model.Count == 0)
{
    <p>No tasks found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Name</td>
                    <td>@(task.Description ?? "No description")</td>
                    <td>@(task.IsCompleted ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}