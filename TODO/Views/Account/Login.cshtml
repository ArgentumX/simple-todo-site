@{
    ViewData["Title"] = "Login";
}
@model TODO.Models.User.view.LoginViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Login</h2>
            @if (ViewData.ModelState.ContainsKey("INVALID_LOGIN_ATTEMPT") && ViewData.ModelState["INVALID_LOGIN_ATTEMPT"].Errors.Any())
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData.ModelState["INVALID_LOGIN_ATTEMPT"].Errors.First().ErrorMessage
                </div>
            }
            <form method="post" asp-action="Login">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Enter username" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required />
                </div>

                <button type="submit" class="btn btn-success w-100">Login</button>
            </form>

            <p class="mt-3 text-center">
                Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-light">Register here</a>
            </p>
        </div>
    </div>
</div>
